{
    "manifest_version": 3,
    "name": "AmazonSteam",
    "version": "1.0",
    "description": "do u rly need that graphics card",
    "content_scripts": [
      {
        "js": ["scripts/content.js"],
        "matches": [
          "https://*/amazon.com/*"
        ]
      }
    ],
    "host_permissions": ["https://api.steampowered.com/*"],
    "action": {
        "default_popup": "hello.html"
      }
  }